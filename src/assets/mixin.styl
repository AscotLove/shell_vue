// 开启flex
flexMixin($flow, $space)
  flex-flow $flow
  justify-content $space
  flex 1
  // 1px 线
line-1px($color)
  position relative
  &:after
    content ''
    display block
    width 100%
    height 1px
    background-color $color
    position absolute
    bottom 0
    left 0
    @media screen and (-webkit-device-pixel-ratio: 2)
      transform scaleY(0.5)
    @media screen and (-webkit-device-pixel-ratio: 3)
      transform scaleY(0.333333333333333333)

// 小图标
icon-mixin($img)
  background-size 100% 100%
  @media screen and (-webkit-device-pixel-ratio: 2)
    background-image url("./images/" + $img + "@2x.png")
  @media screen and (-webkit-device-pixel-ratio: 3)
    background-image url("./images/" + $img + "@3x.png")

